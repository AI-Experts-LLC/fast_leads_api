# Salesforce SANDBOX Testing Configuration
# Copy this to .env.sandbox, then copy .env.sandbox to .env for testing

# APPLICATION SETTINGS
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=sandbox-testing-key-not-for-production

# SALESFORCE SANDBOX CONFIGURATION
SALESFORCE_DOMAIN=https://test.salesforce.com
SALESFORCE_USERNAME=your.email@company.com
SALESFORCE_PASSWORD=yoursandboxpassword
SALESFORCE_SECURITY_TOKEN=YourSandboxSecurityToken123

# For sandbox testing, you can leave these empty initially
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

# LOCAL TESTING INFRASTRUCTURE
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/metrus_sandbox
REDIS_URL=redis://localhost:6379/1

# EXTERNAL API SERVICES (use free tiers for testing)
APIFY_API_TOKEN=
OPENAI_API_KEY=
HUNTER_API_KEY=
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# CONSERVATIVE LIMITS FOR TESTING
DAILY_API_BUDGET=10.00
MAX_ACCOUNTS_PER_DAY=5
MAX_PROSPECTS_PER_ACCOUNT=3
